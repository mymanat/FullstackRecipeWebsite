{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["prettier"],
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 120,
        "trailingComma": "es5",
        "jsxSingleQuote": true,
        "singleQuote": true,
        "endOfLine": "auto"
      }
    ],
    "no-plusplus": 0,
    "no-loop-func": 0,
    "no-undef": 0,
    "no-param-reassign": 0,
    "no-unused-vars": "warn",
    "class-methods-use-this": 0,
    "no-empty-function": "warn"
  }
}
